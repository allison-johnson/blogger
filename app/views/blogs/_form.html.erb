<% if @blog.errors.any? %>
    <ul>
    <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>

<%= form_for(blog) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br><br>

  <%= f.label :content %>
  <%= f.text_area :content %><br><br>

  <%= f.label "Select your email address:" %>
  <%= f.collection_select :user_id, User.all, :id, :email %>

  <%= f.submit %>
<% end %>